<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.xuzheng.mynote.Activity.AboutActivity">

    <include layout="@layout/action_tool_bar_common" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_light">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/icon_in" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="YNotes-桌面便签 版本1.6"
                android:textColor="#999999"
                android:textSize="16sp"
                android:typeface="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text=" 有好的建议或者意见\n欢迎发送邮件至1198097193@qq.com"
                android:textColor="#aaaaaa"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/returnList"
            style="@style/CircleView"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/circle_btn_exit_bg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="返回设置" />
    </FrameLayout>
</LinearLayout>
