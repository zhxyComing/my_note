<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPassSave"
        style="@style/CircleView"
        android:layout_marginRight="@dimen/circle_view_margin"
        android:layout_marginTop="@dimen/circle_view_margin"
        android:background="@drawable/circle_btn_pass_bg"
        android:text="@string/action_password" />

    <TextView
        android:id="@+id/tvMoreSetting"
        style="@style/CircleView"
        android:layout_marginRight="@dimen/circle_view_margin"
        android:layout_marginTop="@dimen/circle_view_margin"
        android:background="@drawable/circle_btn_set_bg"
        android:text="@string/action_settings" />

    <TextView
        android:id="@+id/tvOpenLimit"
        style="@style/CircleView"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="@dimen/circle_view_margin"
        android:layout_marginTop="@dimen/circle_view_margin"
        android:background="@drawable/circle_btn_exit_bg"
        android:text="@string/action_open" />

</LinearLayout>