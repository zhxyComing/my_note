<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color_light"
    android:orientation="vertical"
    tools:context="com.app.xuzheng.mynote.Activity.SecuritySetActivity">

    <include layout="@layout/action_tool_bar_common" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvResetPass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#eeeeee"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="重置密码"
                android:textColor="#666666"
                android:textSize="@dimen/app_item_text_size_small" />

            <TextView
                android:id="@+id/tvClearPass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#eeeeee"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="强制重置密码"
                android:textColor="#666666"
                android:textSize="@dimen/app_item_text_size_small" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
