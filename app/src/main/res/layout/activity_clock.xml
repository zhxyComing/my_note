        app:cardCornerRadius="2dp"
        app:cardElevation="1dp">

        <com.app.xuzheng.mynote.View.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:id="@+id/timeContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_margin="10dp"
                    android:background="#CCCCCC" />

                <EditText
                    android:id="@+id/etClockNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_corner"
                    android:hint="输入提醒事项.."
                    android:padding="10dp"
                    android:textSize="@dimen/app_item_text_size_hide" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_margin="10dp"
                    android:background="#CCCCCC" />

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <com.app.xuzheng.passwordview.TimeLayout
                        android:id="@+id/timeLayout"
                        android:layout_width="200dp"
                        android:layout_height="320dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:elevation="1dp" />

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_margin="10dp"
                    android:background="#CCCCCC" />

                <RadioGroup
                    android:id="@+id/rgWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/tvMonday"
                        style="@style/ClockWeekItem"
                        android:text="一" />

                    <RadioButton
                        android:id="@+id/tvTuesday"
                        style="@style/ClockWeekItem"
                        android:layout_marginLeft="10dp"
                        android:text="二" />

                    <RadioButton
                        android:id="@+id/tvWednesday"
                        style="@style/ClockWeekItem"
                        android:layout_marginLeft="10dp"
                        android:text="三" />

                    <RadioButton
                        android:id="@+id/tvThursday"
                        style="@style/ClockWeekItem"
                        android:layout_marginLeft="10dp"
                        android:text="四" />

                    <RadioButton
                        android:id="@+id/tvFriday"
                        style="@style/ClockWeekItem"
                        android:layout_marginLeft="10dp"
                        android:text="五" />

                    <RadioButton
                        android:id="@+id/tvSaturday"
                        style="@style/ClockWeekItem"
                        android:layout_marginLeft="10dp"
                        android:text="六" />

                    <RadioButton
                        android:id="@+id/tvSunday"
                        style="@style/ClockWeekItem"
                        android:layout_marginLeft="10dp"
                        android:text="七" />
                </RadioGroup>

